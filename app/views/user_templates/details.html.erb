<body>
    <nav>
      <ul>
        <li>
          <a href="/users">Users</a>
        </li>
        <li>
          <a href="/photos">Photos</a>
        </li>
      </ul>
    </nav>

    <h1><%= @the_user.username %></h1>

<dl>
  <dt>
    ID
  </dt>
  <dd>
    <%= @the_user.id %>
  </dd>

  <dt>
    Edit user
  </dt>
  <dd>
    <form action="/update_user/117" method="post">
      <label for="browser_username">Username</label>
      <input id="browser_username" type="text" name="input_username" value="<%= @the_user.username %>">

      <button>Update user</button>
    </form>
  </dd>
</dl>

<% matching_photos = Photo.where({ :owner_id => @the_user.id }) %>

<h2>Own photos</h2>

<table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th>
    </th>
  </tr>

<% matching_photos.each do |a_photo| %>
<tr>
<td> <img src="%= a_photo.image %>" width="100"></td>
<td><%= a_photo.poster.username %></td>
<td> <%= a_photo.caption %></td>
<td> <%= a_photo.created_at %></td>
<td> 
<a href="/photos/<%= a_photo.id %>"> Show details 
</td>
</tr>
<% end %>

</table>

  </body>
